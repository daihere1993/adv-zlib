{
  "name": "adv-zlib",
  "version": "0.2.0",
  "description": "The go-to package for working with large and nested ZIP files â€” fast, efficient, and effortlessly.",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json && node scripts/rename-cjs.js",
    "test-dual-module": "node scripts/test-dual-module.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "zlib",
    "compression"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node": "^20.17.12",
    "@vitest/coverage-v8": "^3.0.4",
    "archiver": "^7.0.1",
    "typescript": "^5.3.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=16"
  }
}
